<div class="post">

  {{#each posts as |post|}}

    <div class="card">
      <div class="card-header">
        <h4><a class="link" href="/post/{{id}}">{{title}}</a></h4>
        <p>Posted by {{user.username}}</p>
      </div>
      <p class="card-body">{{content}}</p>
    </div>

  {{/each}}

</div>